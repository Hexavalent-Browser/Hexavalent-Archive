 class RendererProcessPolicy : public BPFBasePolicy {
  public:
-  RendererProcessPolicy();
+  explicit RendererProcessPolicy(bool is_jit_disabled);
 
   RendererProcessPolicy(const RendererProcessPolicy&) = delete;
